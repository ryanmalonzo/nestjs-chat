generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  identifier     String     @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  username       String     @unique
  email          String     @unique
  hashedPassword String
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @default(now()) @updatedAt
  Message        Message[]
  Document       Document[]
}

model Channel {
  identifier String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name       String    @unique
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @default(now()) @updatedAt
  messages   Message[]
}

model Message {
  identifier         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  fromUser           User     @relation(fields: [fromUserIdentifier], references: [identifier])
  fromUserIdentifier String   @db.Uuid
  channel            Channel  @relation(fields: [channelIdentifier], references: [identifier])
  channelIdentifier  String   @db.Uuid
  content            String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @default(now()) @updatedAt
}

model Document {
  identifier     String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  type           String
  key            String   @unique
  user           User     @relation(fields: [userIdentifier], references: [identifier])
  userIdentifier String   @db.Uuid
  createdAt      DateTime @default(now())
  updatedAt      DateTime @default(now()) @updatedAt
}
